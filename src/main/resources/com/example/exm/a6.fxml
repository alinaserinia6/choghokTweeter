<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="625.0" prefWidth="285.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.exm.AddTweetController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="360.0" minWidth="10.0" prefWidth="285.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints fillHeight="false" minHeight="10.0" valignment="CENTER" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="50.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <HBox prefHeight="0.0" prefWidth="285.0">
         <children>
            <Button fx:id="postButton" mnemonicParsing="false" onAction="#post" opacity="0.5" text="انتشار" />
            <ImageView fitHeight="33.0" fitWidth="39.0" nodeOrientation="RIGHT_TO_LEFT" onMouseClicked="#back" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets left="190.0" />
               </HBox.margin></ImageView>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
         <children>
            <TextArea fx:id="text" minWidth="240.0" nodeOrientation="RIGHT_TO_LEFT" onKeyTyped="#postButtonAppear" prefWidth="240.0" promptText="چه خبر؟" wrapText="true" />
            <ImageView fitHeight="47.0" fitWidth="45.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
      <HBox alignment="BOTTOM_CENTER" fillHeight="false" prefHeight="125.0" prefWidth="285.0" GridPane.rowIndex="2" GridPane.valignment="BOTTOM" />
   </children>
</GridPane>
